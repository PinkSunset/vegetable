    x-data="{ navMenu: false }"
    class="h-20 overflow-hidden"
>
    <div class="bg-white ">
        <div class="px-4 py-5 mx-auto overflow-hidden md:container sm:py-6 sm:px-7">
            <div class="flex justify-between"> 
                    <nav :class="{'' : navMenu, '-translate-y-full md:translate-y-0' : !navMenu }" class="absolute top-0 left-0 z-50 w-1/2 h-screen p-5 transition-all duration-500 bg-white md:right-auto md:top-auto md:h-auto md:w-auto md:bg-inherit md:static">
                        <ul class="grid items-center justify-center text-xl mt-14 gap-y-6 md:grid-flow-col md:gap-5 md:max-w-max">
