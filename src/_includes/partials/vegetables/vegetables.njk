{% set icons= [
        {
            title: "30k",
            subtitle: "User Order",
            icon: "person"
        },
        {
            title: "20K",
            subtitle: "Reviews(4.8)",
            icon: "star"
        },
        {
            title: "300",
            subtitle: "Items",
            icon: "harvest"
        }
    ] 
%}

<section class="bg-narvik__1">
    <div class="container px-5 py-5 mx-auto lg:px-10">
        <div class="relative mx-auto  max-w-[686px] h-[465px] text-center pt-24"  >
            <img class="w-[600px] h-[400px] hidden md:block -left-1/2 top-0 absolute" src="/images/image/fresh.png" alt="листочки">
            <div class="relative z-10 grid mx-auto text-center gap-y-5">
                <h1 class="text-3xl font-bold xl:text-7xl">Organic Fruit & Vegetables</h1>
                <p class="text-sm md:text-lg">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley...</p>
            </div>
                <div class="grid items-center grid-flow-col grid-cols-2 pt-16 mx-auto gap-x-2 max-w-max">
                    <span class="font-normal">Order Now</span>
                    <button class="flex items-center justify-center w-16 h-16 transition-all duration-150 rounded-full bg-gossamer focus:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-gossamer focus-within:bg-japanese__laurel hover:bg-japanese__laurel">
                            <svg class="w-8 h-7 ">
                                <use xlink:href="/images/icons/all-icon.svg#arrow"></use>
                            </svg>
                    </button>
            </div>
        </div>
            <div class="grid mt-3  justify-center lg:justify-end sm:-mt-[6.75rem] md:mt-10 md:mx-auto">
                <ul class="grid justify-center mt-5 gap-y-8 sm:mx-4 ">
                    {% for item in icons %}
                        <li class="grid max-w-max w-[250px]  grid-cols-2 items-center h-[116px] bg-white shadow-2xl">
                            <div class="grid items-center justify-center mx-8 rounded-full md:grid w-14 h-14 bg-narvik__1">
                                    <svg class="w-8 h-8">
                                        <use xlink:href="/images/icons/all-icon.svg#{{ item.icon }}"></use>
                                    </svg>
                            </div>
                            <div class="grid justify-between">
                                <span class="text-center text-[48px]">{{ item.title }}</span>
                                <span class="text-lg text-center">{{ item.subtitle }}</span>
                            </div>   
                        </li>
                    {% endfor %}
                </ul>
                <div class="w-[690px] hidden lg:block absolute mx-auto h-[465px] mt-10 bg-no-repeat" style="background-image: url(images/image/vegetable.png);" ></div>
            </div>
        </div>
</section>