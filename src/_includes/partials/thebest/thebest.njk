{% set services= [
        {
            title: "Fasted delivery Service",
            subtitle: "Lorem Ipsum is simply dummy text of the printing and typesetting industry.",
            icon: "man"
        },
        {
            title: "Online order Service",
            subtitle: "Lorem Ipsum is simply dummy text of the printing and typesetting industry.",
            icon: "list"
        },
        {
            title: "24/8 Service",
            subtitle: "Lorem Ipsum is simply dummy text of the printing and typesetting industry.",
            icon: "clock"
        }
    ] 
%}
<section>
    <div class="container px-5 py-5 mx-auto mt-20 lg:px-10">
        <div class="text-center grid gap-y-5 max-w-[500px] mx-auto lg:max-w-[640px]">
            <h1 class="text-3xl font-bold lg:text-7xl">Why We Aer The Best?</h1>
            <p class="text-sm md:text-lg">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley...</p>
        </div>
        <div class="grid items-center justify-center gap-x-4 lg:grid-cols-2 ">
            <ul class="grid items-center w-full mt-5 md:justify-start md:gap-4 ">
                {% for item in services %}
                    <li class="grid max-w-[500px] grid-cols-[1fr,auto] {% if loop.index===2 %} bg-narvik__1 {% else %} bg-white {% endif %} items-center h-[160px]  ">
                        <div class="hidden sm:block">
                            <div class="items-center justify-center w-20 h-20 mx-8 rounded-full sm:grid {% if loop.index===2 %} bg-white {% else %} bg-narvik__1 {% endif %}">
                                <svg class="w-10 h-10">
                                    <use xlink:href="/images/icons/all-icon.svg#{{ item.icon }}"></use>
                                </svg>
                            </div>
                        </div>
                            <div class="grid justify-between">
                                <span class="text-start text-sm md:text-[20px] font-bold">{{ item.title }}</span>
                                <span class="pt-2 text-sm md:text-lg text-start">{{ item.subtitle }}</span>
                        </div>   
                    </li>
                {% endfor %}
            </ul>
            <div class="relative self-start hidden max-w-max lg:block ">
                <div class="grid grid-cols-[50%,50%] grid-rows-[50%,50%] w-[420px] h-[420px] gap-8 rotate-45">
                    <div class="w-full h-full overflow-hidden">
                        <div class="w-full h-full translate-x-4 translate-y-4 rounded-tl-full bg-gossamer"></div>
                    </div>
                    <div class="w-full h-full overflow-hidden">
                        <div class="w-full h-full -translate-x-4 translate-y-4 rounded-tr-full bg-gossamer"></div>
                    </div>
                    <div class="w-full h-full overflow-hidden">
                        <div class="w-full h-full translate-x-4 -translate-y-4 rounded-bl-full bg-gossamer"></div>
                    </div>
                    <div class="w-full h-full overflow-hidden">
                        <div class="w-full h-full -translate-x-4 -translate-y-4 rounded-br-full bg-gossamer"></div>
                    </div>
                </div>
                <div class="absolute -translate-y-12 bg-center bg-no-repeat bg-contain inset-2" style="background-image: url(/images/image/man.png);">
                </div>
